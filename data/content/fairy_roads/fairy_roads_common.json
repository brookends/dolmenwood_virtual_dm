          "count": "3d6"
        }
      ]
    },
    "time_passed_in_mortal_world_2d6": {
      "die": "2d6",
      "entries": [
        {
          "roll": 2,
          "time": "1d6 minutes"
        },
        {
          "roll_range": [
            3,
            5
          ],
          "time": "1d6 hours"
        },
        {
          "roll_range": [
            6,
            8
          ],
          "time": "1d6 days"
        },
        {
          "roll_range": [
            9,
            11
          ],
          "time": "2d6 days"
        },
        {
          "roll": 12,
          "time": "1d6 weeks"
        }
      ]
    }
  }
}
